<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="flexibleHose">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>
            <en>hose</en>
        </name>
        <image>store.png</image>
        <price>0</price> <!-- ToDo -->
        <lifetime>600</lifetime>
        <rotation>0</rotation>
        <brand>LIZARD</brand>
        <category>slurryTanks</category>
        <vertexBufferMemoryUsage>510488</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>87540</indexBufferMemoryUsage>
        <textureMemoryUsage>11469208</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_manureBarrel</typeDesc>
        <filename>hose/hose.i3d</filename>
        <size width="0.2" length="3"/>
        <components>
            <component centerOfMass="0 0 -0.25" solverIterationCount="40" mass="2.5"/>
            <component centerOfMass="0 0 0" solverIterationCount="20" mass="2.5"/>
            <component centerOfMass="0 0 0" solverIterationCount="20" mass="2.5"/>
            <component centerOfMass="0 0 0.25" solverIterationCount="40" mass="2.5"/>

            <joint component1="1" component2="2" node="componentJoint1" zRotationNode="componentJoint1Actor" rotLimit="50 40 10" rotMinLimit="-50 -40 -10"
                   transLimit="0 0 0" rotDriveVelocity="0 0 0"/>
            <joint component1="2" component2="3" node="componentJoint2" zRotationNode="componentJoint2Actor" rotLimit="50 40 10" rotMinLimit="-50 -40 -10"
                   transLimit="0 0 0" rotDriveVelocity="0 0 0"/>
            <joint component1="3" component2="4" node="componentJoint3" zRotationNode="componentJoint3Actor" rotLimit="50 40 10" rotMinLimit="-50 -40 -10"
                   transLimit="0 0 0" rotDriveVelocity="0 0 0"/>
        </components>
        <schemaOverlay attacherJointPosition="0 0">
            <default name="DEFAULT_IMPLEMENT"/>
            <turnedOn name="DEFAULT_IMPLEMENT_ON"/>
            <selected name="DEFAULT_IMPLEMENT_SELECTED"/>
            <turnedOnSelected name="DEFAULT_IMPLEMENT_SELECTED_ON"/>
        </schemaOverlay>
    </base>

    <wearable wearDuration="480" workMultiplier="5" fieldMultiplier="2"/>
    <washable dirtDuration="90" washDuration="1" workMultiplier="3" fieldMultiplier="2"/>

    <hose mesh="mesh" targetNode="target" />
    <ropes>
        <rope baseNode="mesh" targetNode="target" baseParameters="0 0 -3 0" targetParameters="0 0 3 0">
            <baseParameterAdjuster node="targetAdjuster1" rotationAxis="2" rotationRange="-90 90" minTargetParameters="18 0 18 0"
                                   maxTargetParameters="-18 0 -18 0"/>
            <targetParameterAdjuster node="targetAdjuster1" rotationAxis="2" rotationRange="-90 90" minTargetParameters="-18 0 -18 0"
                                     maxTargetParameters="18 0 18 0"/>
            <baseParameterAdjuster node="targetAdjuster2" rotationAxis="2" rotationRange="-90 90" minTargetParameters="18 0 18 0"
                                   maxTargetParameters="-18 0 -18 0"/>
            <targetParameterAdjuster node="targetAdjuster2" rotationAxis="2" rotationRange="-90 90" minTargetParameters="-18 0 -18 0"
                                     maxTargetParameters="18 0 18 0"/>
        </rope>
    </ropes>

    <foliageBending>
        <bendingNode minX="-1.35" maxX="1.35" minZ="-3.5" maxZ="4.1" yOffset="0.2"/>
    </foliageBending>

    <baseMaterial>
        <material name="hose_mat" baseNode="mesh">
            <shaderParameter name="colorMat1" value="0.004 0.061 0.117 1.0"/>
        </material>
    </baseMaterial>

    <baseMaterialConfigurations price="3000" useDefaultColors="false" defaultColorIndex="0">
        <baseMaterialConfiguration color="0.004 0.061 0.117 1.0"/><!-- blue -->
        <baseMaterialConfiguration color="0.013 0.013 0.013 1.0"/><!-- black -->
        <baseMaterialConfiguration color="0.04 0.175 0.105 1.0"/><!-- green -->
        <baseMaterialConfiguration color="0.1 0.025 0.005 1.0"/><!-- brown -->
        <baseMaterialConfiguration color="0.19 0.19 0.19 1.0"/> <!-- gray -->
        <material name="hose_mat" shaderParameter="colorMat1"/>
    </baseMaterialConfigurations>

    <i3dMappings>
        <i3dMapping id="mesh" node="0>0"/>
        <i3dMapping id="extendable" node="0>1"/>
        <i3dMapping id="grabPoint1" node="0>2"/>
        <i3dMapping id="componentJoint1" node="0>3"/>
        <i3dMapping id="componentJoint1Actor" node="0>3|0"/>
        <i3dMapping id="componentJoint2" node="1>0"/>
        <i3dMapping id="componentJoint2Actor" node="1>0|0"/>
        <i3dMapping id="targetAdjuster1" node="1>1"/>
        <i3dMapping id="componentJoint3" node="2>0"/>
        <i3dMapping id="componentJoint3Actor" node="2>0|0"/>
        <i3dMapping id="targetAdjuster2" node="2>1"/>
        <i3dMapping id="grabPoint2" node="3>0"/>
        <i3dMapping id="target" node="3>1"/>
    </i3dMappings>
</vehicle>
