<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="47">
    <author>Wopster</author>
    <version>1.0.0.0</version>
    <title>
        <en>ManureSystem</en>
    </title>
    <description>
        <en>
            <![CDATA[ToDo]]>
        </en>
        <de>
            <![CDATA[ToDo]]>
