<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="44">
    <author>Wopster</author>
    <version>1.0.0.0</version>
    <title>
        <en>ManureSystem</en>
    </title>
    <description>
        <en>
            <![CDATA[ToDo]]>
        </en>
        <de>
            <![CDATA[ToDo]]>
        </de>
    </description>
    <iconFilename>icon_manureSystem.png</iconFilename>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="src/loader.lua"/>
    </extraSourceFiles>

    <specializations>
        <specialization name="hose" className="Hose" filename="src/hose/Hose.lua"/>
        <specialization name="manureSystemPumpMotor" className="ManureSystemPumpMotor" filename="src/vehicles/ManureSystemPumpMotor.lua"/>
        <specialization name="manureSystemConnector" className="ManureSystemConnector" filename="src/vehicles/ManureSystemConnector.lua"/>
        <specialization name="manureSystemFillArm" className="ManureSystemFillArm" filename="src/vehicles/ManureSystemFillArm.lua"/>
        <specialization name="manureSystemFillArmReceiver" className="ManureSystemFillArmReceiver" filename="src/vehicles/ManureSystemFillArmReceiver.lua"/>

        <!-- Vanilla insertion specs -->
        <specialization name="manureSystemPGII20" className="ManureSystemPGII20" filename="src/vehicles/vanillainserts/ManureSystemPGII20.lua"/>
        <specialization name="manureSystemPGII25" className="ManureSystemPGII25" filename="src/vehicles/vanillainserts/ManureSystemPGII25.lua"/>
        <specialization name="manureSystemPGII35" className="ManureSystemPGII35" filename="src/vehicles/vanillainserts/ManureSystemPGII35.lua"/>
        <specialization name="manureSystemKotteFRC" className="ManureSystemKotteFRC" filename="src/vehicles/vanillainserts/ManureSystemKotteFRC.lua"/>
    </specializations>

    <vehicleTypes>
        <type name="flexibleHose" className="Vehicle" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="baseMaterial"/>
            <specialization name="washable"/>
            <specialization name="wearable"/>
            <specialization name="foliageBending"/>
            <specialization name="hose"/>
        </type>
        <type name="vanillaPGII20" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPGII20"/>
        </type>
        <type name="vanillaPGII25" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPGII25"/>
        </type>
        <type name="vanillaPGII35" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPGII35"/>
        </type>
        <type name="vanillaFRC" parent="manureTrailer" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemKotteFRC"/>
            <specialization name="manureSystemConnector"/>
            <specialization name="manureSystemFillArmReceiver"/>
        </type>
    </vehicleTypes>

    <storeItems>
        <storeItem xmlFilename="resources/slurryLagoon/slurryStorage2.xml"/>
        <storeItem xmlFilename="resources/hoses/slurry/slurryHose.xml"/>
        <!--        <storeItem xmlFilename="resources/hoses/fertilizer/fertilizerHose.xml"/>-->
    </storeItems>

    <l10n filenamePrefix="translations/translation"/>

    <actions>
        <action name="MS_ATTACH_HOSE" axisType="HALF"/>
        <action name="MS_DETACH_HOSE" axisType="HALF"/>
        <action name="MS_TOGGLE_FLOW" axisType="HALF"/>
        <action name="ACTIVATE_PUMP" axisType="HALF"/>
        <action name="TOGGLE_PUMP_DIRECTION" axisType="HALF"/>
    </actions>

    <inputBinding>
        <actionBinding action="ACTIVATE_PUMP">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_r"/>
        </actionBinding>
        <actionBinding action="TOGGLE_PUMP_DIRECTION">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_z"/>
        </actionBinding>
        <actionBinding action="MS_ATTACH_HOSE">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_RIGHT"/>
        </actionBinding>
        <actionBinding action="MS_DETACH_HOSE">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_LEFT"/>
        </actionBinding>
        <actionBinding action="MS_TOGGLE_FLOW">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_RIGHT"/>
        </actionBinding>
    </inputBinding>
</modDesc>
