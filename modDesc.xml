    <iconFilename>icon.png</iconFilename>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="src/loader.lua"/>
    </extraSourceFiles>

    <specializations>
        <specialization name="hose" className="Hose" filename="src/hose/Hose.lua"/>
        <specialization name="manureSystemPumpMotor" className="ManureSystemPumpMotor" filename="src/vehicles/ManureSystemPumpMotor.lua"/>
        <specialization name="manureSystemConnector" className="ManureSystemConnector" filename="src/vehicles/ManureSystemConnector.lua"/>
        <specialization name="manureSystemFillArm" className="ManureSystemFillArm" filename="src/vehicles/ManureSystemFillArm.lua"/>
        <specialization name="manureSystemFillArmReceiver" className="ManureSystemFillArmReceiver" filename="src/vehicles/ManureSystemFillArmReceiver.lua"/>

        <!-- Vanilla insertion specs -->
        <specialization name="manureSystemPGII20" className="ManureSystemPGII20" filename="src/vehicles/vanillainserts/ManureSystemPGII20.lua"/>
        <specialization name="manureSystemPGII25" className="ManureSystemPGII25" filename="src/vehicles/vanillainserts/ManureSystemPGII25.lua"/>
        <specialization name="manureSystemPGII35" className="ManureSystemPGII35" filename="src/vehicles/vanillainserts/ManureSystemPGII35.lua"/>
        <specialization name="manureSystemKotteFRC" className="ManureSystemKotteFRC" filename="src/vehicles/vanillainserts/ManureSystemKotteFRC.lua"/>
        <specialization name="manureSystemKotteTSA" className="ManureSystemKotteTSA" filename="src/vehicles/vanillainserts/ManureSystemKotteTSA.lua"/>
        <specialization name="manureSystemKotteVE8000" className="ManureSystemKotteVE8000" filename="src/vehicles/vanillainserts/ManureSystemKotteVE8000.lua"/>
        <specialization name="manureSystemModulo" className="ManureSystemModulo" filename="src/vehicles/vanillainserts/ManureSystemModulo.lua"/>
        <specialization name="manureSystem18500PE" className="ManureSystem18500PE" filename="src/vehicles/vanillainserts/ManureSystem18500PE.lua"/>
        <specialization name="manureSystemPremiumIntegral30000" className="ManureSystemPremiumIntegral30000" filename="src/vehicles/vanillainserts/ManureSystemPremiumIntegral30000.lua"/>
        <specialization name="manureSystemTV585" className="ManureSystemTV585" filename="src/vehicles/vanillainserts/ManureSystemTV585.lua"/>
        <specialization name="manureSystemTerraVariant435" className="ManureSystemTerraVariant435" filename="src/vehicles/vanillainserts/ManureSystemTerraVariant435.lua"/>
    </specializations>

    <vehicleTypes>
        <type name="flexibleHose" className="Vehicle" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="baseMaterial"/>
            <specialization name="animatedVehicle"/>
            <specialization name="washable"/>
            <specialization name="wearable"/>
            <specialization name="foliageBending"/>
            <specialization name="hose"/>
        </type>
        <type name="vanillaPGII20" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPGII20"/>
        </type>
        <type name="vanillaPGII25" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPGII25"/>
        </type>
        <type name="vanillaPGII35" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPGII35"/>
        </type>
        <type name="vanillaModulo" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemModulo"/>
        </type>
        <type name="vanillaVE8000" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemKotteVE8000"/>
        </type>
        <type name="vanilla18500PE" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystem18500PE"/>
        </type>
        <type name="vanillaPremiumIntegral30000" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemPremiumIntegral30000"/>
        </type>
        <type name="vanillaFRC" parent="manureTrailer" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemKotteFRC"/>
            <specialization name="manureSystemConnector"/>
            <specialization name="manureSystemFillArmReceiver"/>
        </type>
        <type name="vanillaTSA" parent="manureTrailer" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemKotteTSA"/>
            <specialization name="manureSystemConnector"/>
            <specialization name="manureSystemPumpMotor"/>
        </type>
        <!-- HOLMER DLC -->
        <type name="dlcTV585" parent="manureBarrel" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="manureSystemTV585"/>
        </type>
        <type name="dlcTerraVariant435" parent="tractorCrabSteering" filename="$dataS/scripts/vehicles/Vehicle.lua">
            <specialization name="fillVolume"/>
            <specialization name="dischargeable"/>
            <specialization name="foldable"/>
            <specialization name="fillTriggerVehicle"/>
            <specialization name="powerConsumer"/>
            <specialization name="manureSystemTerraVariant435"/>
            <specialization name="manureSystemFillArm"/>
            <specialization name="manureSystemConnector"/>
            <specialization name="manureSystemPumpMotor"/>
        </type>
    </vehicleTypes>

    <storeItems>
        <storeItem xmlFilename="resources/hoses/slurry/slurryHose.xml"/>
    </storeItems>

    <l10n filenamePrefix="translations/translation"/>

    <actions>
        <action name="MS_ATTACH_HOSE" axisType="HALF"/>
        <action name="MS_DETACH_HOSE" axisType="HALF"/>
        <action name="MS_TOGGLE_FLOW" axisType="HALF"/>
        <action name="MS_ACTIVATE_PUMP" axisType="HALF"/>
        <action name="MS_TOGGLE_PUMP_DIRECTION" axisType="HALF"/>
    </actions>

    <inputBinding>
        <actionBinding action="MS_ACTIVATE_PUMP">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_r"/>
        </actionBinding>
        <actionBinding action="MS_TOGGLE_PUMP_DIRECTION">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_z"/>
        </actionBinding>
        <actionBinding action="MS_ATTACH_HOSE">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_RIGHT"/>
        </actionBinding>
        <actionBinding action="MS_DETACH_HOSE">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_LEFT"/>
        </actionBinding>
        <actionBinding action="MS_TOGGLE_FLOW">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_RIGHT"/>
        </actionBinding>
    </inputBinding>
</modDesc>
